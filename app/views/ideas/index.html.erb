<div class="row">
  <%= link_to '', new_idea_path, :class => 'pull-right glyphicon glyphicon-plus glyphicon-2x' %>
</div>
<div class="row" id="masonry">

      <% @ideas.each do |idea| %>
      <!-- This is the overlay for the hover -->
      <div class="col-xs-3 item">
        <%= image_tag("cover_images/#{idea.cover_img}") %>
        <%= link_to '', edit_idea_path(idea), :class => 'dock-item glyphicon glyphicon-pencil' %>
        <%= link_to '', idea, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'glyphicon glyphicon-remove' %>

        <div class="overlay" ng-controller="IdeaIndexCtrl">
          <h3 class="title">{{title}}<%= idea.name %></h3>
          <div class="description">
            <p>
              {{description}}
              <%= idea.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
</div>

