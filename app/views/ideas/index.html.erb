<div class="row">
  <%= link_to '', new_idea_path, :class => 'pull-right glyphicon glyphicon-plus glyphicon-2x' %>
</div>
<div class="row masonry" ng-controller="IdeaIndexCtrl">

      <!-- This is the overlay for the hover -->
      <div class="col-xs-3 item" ng-repeat="idea in ideas">
        <img src="/images/cover_images/{{idea.cover_img}}" />
        <a ng-click="editIdea(idea.id)" class='dock-item glyphicon glyphicon-pencil' ></a>
        <a ng-click="deleteIdea(idea.id)" class='glyphicon glyphicon-remove' ></a>

        <div class="overlay" >
          <h3 class="title">{{idea.name}}</h3>
          <div class="description">
            <p>
              {{idea.description}}
            </p>
          </div>
        </div>
      </div>
</div>

